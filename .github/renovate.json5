{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "branchPrefix": "update-renovate/",
    "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
    "forkProcessing": "disabled",
    "extends": [
        "config:recommended",
        ":disableDependencyDashboard",
        ":rebaseStalePrs",
        "docker:enableMajor",
    ],
    "enabledManagers": [
        "docker-compose"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "docker"
            ],
            "versioning": "semver",
        },
    ],
}